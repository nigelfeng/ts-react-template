{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "checkJs": false,
    "noImplicitAny": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@service": ["src/service/index.ts"],
      "@store/*": ["src/store/*"],
      "@hooks": ["src/hooks/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.*"]
}
